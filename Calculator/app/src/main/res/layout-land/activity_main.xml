<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="0dp"
        tools:context=".MainActivity">

    <TextView
            android:layout_height="110dp"
            android:layout_width="match_parent"
            android:id="@+id/pad"
            android:text="0"
            android:textSize="40sp"/>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">


    </LinearLayout>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:id="@+id/open_brace"
                android:text="("
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:textSize="20sp"/>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text=")"
                android:id="@+id/close_brace"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:textSize="20sp"/>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:id="@+id/charClear"
                android:onClick="calculate"
                android:text="C"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"/>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:id="@+id/clear"
                android:onClick="calculate"
                android:text="CE"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_marginLeft="20sp"
                android:background="@color/colorAccent"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:id="@+id/mod"
                android:text="%"

                android:textColor="#fff"
                android:background="@color/colorAccent"
                android:onClick="calculate"
                android:textSize="20sp"/>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="115dp"
                android:id="@+id/power"
                android:text="^"
                android:onClick="calculate"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"/>


    </LinearLayout>
    <LinearLayout
            android:layout_margin="0dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="8"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:id="@+id/eight"
                android:onClick="calculate"
        />
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="7"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:id="@+id/seven"/>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="9"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:id="@+id/nine"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="+"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"
                android:layout_marginLeft = "20dp"
                android:onClick="calculate"
                android:id="@+id/plus"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:id="@+id/minus"
                android:onClick="calculate"
                android:text="-"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"/>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="115dp"
                android:id="@+id/mul"
                android:onClick="calculate"
                android:text="*"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"/>


    </LinearLayout>

    <LinearLayout
            android:layout_margin="0dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="4"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:id="@+id/four"/>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="5"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:id="@+id/five"/>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="6"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:id="@+id/six"/>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="sin"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#fff"
                android:onClick="calculate"
                android:background="@color/colorAccent"
                android:layout_marginLeft="20dp"
                android:id="@+id/sin"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:id="@+id/cos"
                android:onClick="calculate"
                android:text="cos"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"/>
        <Button
                android:layout_height="wrap_content"
                android:layout_width="115dp"
                android:id="@+id/tan"
                android:onClick="calculate"
                android:text="tan"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"/>

    </LinearLayout>
    <LinearLayout
            android:layout_margin="0dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="1"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:id="@+id/one"
        />
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="2"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:id="@+id/two"
        />
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="3"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:id="@+id/three"
        />

        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="ln"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"
                android:onClick="calculate"
                android:layout_marginLeft="20dp"
                android:id="@+id/ln"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:id="@+id/log"
                android:textAllCaps="false"
                android:onClick="calculate"
                android:text="log"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="115dp"
                android:id="@+id/divBy"
                android:onClick="calculate"
                android:textAllCaps="false"
                android:text="1/x"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:id="@+id/zero"
        />
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="."
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:id="@+id/dot"
        />
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="="
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:onClick="calculate"
                android:id="@+id/answer"
        />
        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:text="/"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"
                android:layout_marginLeft="20dp"
                android:onClick="calculate"
                android:id="@+id/div"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:id="@+id/abs"
                android:onClick="calculate"
                android:text="|x|"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="115dp"
                android:id="@+id/e"
                android:onClick="calculate"
                android:text="e"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@color/colorAccent"/>


    </LinearLayout>

</LinearLayout>