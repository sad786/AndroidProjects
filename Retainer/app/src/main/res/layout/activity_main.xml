<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >
    <TableRow>
        <TextView
        android:id="@+id/loc"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:textSize="30dp"/>
        <EditText
                android:id="@+id/locField"
                android:layout_height="wrap_content"
                android:layout_width="275dp"
                android:textStyle="bold"
                android:textSize="30dp"/>
    </TableRow>
    <TableRow>
        <TextView
        android:id="@+id/lightsRent"
        android:text="Lights Rent"
        android:textSize="30dp"
        android:textStyle="bold"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/rentText"/>

    </TableRow>
    <TableRow>
        <TextView
        android:id="@+id/lights"
        android:text="Lights Rent Free"
        android:textSize="30dp"
        android:textStyle="bold"
        />
        <EditText
        android:id="@+id/lightsText"
        android:inputType="numberDecimal"
        android:ems="10"/>
    </TableRow>
    <TableRow>
        <TextView
        android:id="@+id/ledRent"
        android:text="LED Rent"
        android:textSize="30dp"
        android:textStyle="bold"
        />
        <EditText
        android:id="@+id/ledText"
        android:inputType="numberDecimal"
        android:ems="10"
        />

    </TableRow>
    <TableRow>
        <TextView
        android:id="@+id/other"
        android:text="Other Information"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginLeft="50dp"
        />
    </TableRow>
    <TableRow>
        <EditText
        android:id="@+id/ohterText"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:textSize="30dp"
        android:textStyle="bold"/>
    </TableRow>
    <TableRow>
        <Button
            android:text="Save"
            android:layout_marginLeft="70dp"
            android:id="@+id/saveBtn"
        />
    </TableRow>
    <TableRow>
        <Button
        android:text="Show"
        android:id="@+id/showBtn"
        android:layout_marginLeft="70dp"/>
    </TableRow>

</TableLayout>