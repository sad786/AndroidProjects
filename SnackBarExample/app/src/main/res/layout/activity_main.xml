<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:theme="@style/Theme.AppCompat">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_margin="15dp"
        android:text="Ripple Effect"
        android:id="@+id/ripButton"
        android:onClick="showRipple"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/sadImage"
            android:layout_height="20dp"
            android:layout_width="100dp"
            android:baselineAlignBottom="false"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="Saddam Ahmed"
            android:id="@+id/rit"
            android:textSize="25dp"
            android:gravity="bottom"
            android:textColor="@color/colorPrimary"
            />
        <ImageView
            android:id="@+id/lipsImage"
            android:layout_height="20dp"
            android:layout_width="100dp"
            android:layout_margin="5dp"/>
        />

    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/exText"
        android:text="Explode Transition"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_margin="15dp"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="170dp"
            android:layout_marginLeft="30dp"
            android:text="JAVA Class"
            android:id="@+id/javaButton"
            android:onClick="java"
        />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="180dp"
            android:layout_marginRight="50dp"
            android:text="XML"
            android:id="@+id/xmlButton"
            android:onClick="xml"/>

    </LinearLayout>
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/slText"
            android:text="Slide Transition"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_margin="15dp"/>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp">
        <Button
                android:layout_height="wrap_content"
                android:layout_width="170dp"
                android:layout_marginLeft="30dp"
                android:text="JAVA Class"
                android:id="@+id/javaButton2"
                android:onClick="java"
        />
        <Button
                android:layout_height="wrap_content"
                android:layout_width="180dp"
                android:layout_marginRight="50dp"
                android:text="XML"
                android:id="@+id/xmlButton2"
                android:onClick="xml"/>

    </LinearLayout>
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fdText"
            android:text="Fade Transition"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_margin="15dp"/>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <Button
                android:layout_height="wrap_content"
                android:layout_width="170dp"
                android:layout_marginLeft="30dp"
                android:text="JAVA Class"
                android:id="@+id/javaButton3"
                android:onClick="java"
        />
        <Button
                android:layout_height="wrap_content"
                android:layout_width="180dp"
                android:layout_marginRight="50dp"
                android:text="XML"
                android:id="@+id/xmlButton3"
                android:onClick="xml"/>

    </LinearLayout>
</LinearLayout>